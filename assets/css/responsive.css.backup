/* ==========================================================================
   RESPONSIVE DESIGN - Mobile First Approach
   ========================================================================== */

/* ==========================================================================
   Base Styles - Mobile First (320px and up)
   ========================================================================== */

/* Full width layout override */
.page,
.page__inner-wrap,
#main {
  max-width: 100% !important;
}

.page__content {
  max-width: 100%;
}

/* Fix sidebar overlay issue - ensure content doesn't overlap */
@media (min-width: 64em) {
  .layout--single .page,
  .layout--home .page,
  .layout--collection .page,
  .layout--archive .page,
  .layout--posts .page {
    float: left;
    width: calc(100% - 300px);
    padding-right: 3rem;
    padding-left: 3.5rem;
  }
  
  /* Extra spacing for blog and articles pages */
  .layout--archive .page,
  .layout--posts .page,
  .layout--collection .page {
    padding-left: 4.5rem;
    padding-right: 3.5rem;
  }
  
  .sidebar {
    width: 250px;
    padding-right: 2rem;
  }
  
  .page__inner-wrap {
    float: left;
    width: 100%;
  }
}

/* Adjust main content area for better use of space */
@media (min-width: 80em) {
  .layout--single .page,
  .layout--home .page,
  .layout--collection .page,
  .layout--archive .page,
  .layout--posts .page {
    width: calc(100% - 320px);
    padding-right: 3.5rem;
    padding-left: 4rem;
  }
  
  /* Extra spacing for blog and articles pages */
  .layout--archive .page,
  .layout--posts .page,
  .layout--collection .page {
    padding-left: 5rem;
    padding-right: 4rem;
  }
  
  .page__related {
    max-width: 100%;
  }
  
  .sidebar {
    width: 280px;
    padding-right: 2.5rem;
  }
}

/* Navigation and Mobile Menu Fix */
.masthead {
  position: relative;
}

.greedy-nav {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.greedy-nav__toggle {
  order: 9;
  margin-left: auto;
}

.search__toggle {
  order: 8;
}

/* Mobile Navigation - Show hamburger menu when needed */
@media (max-width: 1024px) {
  /* Dropdown menu styling - semi-transparent with theme matching */
  .greedy-nav .hidden-links {
    position: absolute !important;
    top: 100% !important;
    right: 0 !important;
    background: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(10px) !important;
    -webkit-backdrop-filter: blur(10px) !important;
    border: 1px solid rgba(0, 0, 0, 0.1) !important;
    border-radius: 8px !important;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
    min-width: 200px !important;
    z-index: 1002 !important;
    padding: 0 !important;
    margin-top: 5px !important;
    overflow: hidden !important;
    pointer-events: auto !important; /* Ensure menu can receive clicks */
  }
  
  .greedy-nav .hidden-links:not(.hidden) {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
    pointer-events: auto !important; /* Ensure visible menu can receive clicks */
  }
  
  .greedy-nav .hidden-links.hidden {
    display: none !important;
  }
  
  /* Background overlay when menu is open - prevent color accumulation */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0s linear 0.3s;
    pointer-events: none; /* Allow clicks to pass through to menu items */
  }
  
  /* Show overlay only when menu is open */
  body.nav-open::before {
    opacity: 1;
    visibility: visible;
    transition: opacity 0.3s ease, visibility 0s linear 0s;
  }
  
  /* Hide navigation links on mobile */
  .greedy-nav .visible-links {
    display: none !important;
  }
  
  /* FORCE show the hamburger menu toggle on mobile - override any JS */
  .greedy-nav__toggle,
  .greedy-nav__toggle.hidden {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  .greedy-nav {
    justify-content: space-between;
    padding: 0.5rem 0;
    position: relative;
    z-index: 1000;
  }
  
  .greedy-nav .site-title {
    flex: 1;
    margin-right: auto;
    font-size: 1.1rem;
    padding-right: 0.5rem;
  }
  
  .greedy-nav .site-logo {
    max-width: 80px;
    margin-right: 0.5rem;
  }
  
  .greedy-nav .search__toggle,
  .greedy-nav__toggle {
    position: relative;
    flex-shrink: 0;
    margin-left: 0.25rem;
    z-index: 1001;
  }
  
  .greedy-nav__toggle {
    margin-left: 0.5rem;
    display: block !important;
    visibility: visible !important;
    outline: none;
    cursor: pointer;
    padding: 8px;
    min-width: 44px;
    min-height: 44px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }
  
  .greedy-nav__toggle:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }
  
  .greedy-nav__toggle:focus {
    outline: 2px solid #007acc;
    outline-offset: 2px;
  }
  
  .navicon {
    display: block !important;
    position: relative;
    width: 1.5rem;
    height: 0.25rem;
    background: currentColor;
    margin: auto;
    transition: 0.3s;
  }
  
  .navicon::before,
  .navicon::after {
    content: "";
    position: absolute;
    left: 0;
    width: 1.5rem;
    height: 0.25rem;
    background: currentColor;
    transition: 0.3s;
  }
  
  .navicon:before {
    top: -0.5rem;
  }
  
  .navicon:after {
    bottom: -0.5rem;
  }
  
  /* Hamburger animation when menu is open */
  .greedy-nav__toggle.close .navicon {
    background: transparent;
  }
  
  .greedy-nav__toggle.close .navicon::before {
    transform: rotate(-45deg);
    top: 0;
  }
  
  .greedy-nav__toggle.close .navicon::after {
    transform: rotate(45deg);
    bottom: 0;
  }
  
  /* Ensure buttons don't get too cramped */
  .greedy-nav button {
    min-width: 44px;
    height: 44px;
  }
  
  .greedy-nav .hidden-links li {
    display: block !important;
    margin: 0 !important;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1) !important;
    pointer-events: auto !important; /* Ensure list items can receive clicks */
  }
  
  .greedy-nav .hidden-links li:last-child {
    border-bottom: none !important;
  }
  
  .greedy-nav .hidden-links a {
    display: block !important;
    padding: 16px 20px !important;
    text-decoration: none !important;
    color: #333 !important;
    font-weight: 500 !important;
    transition: background-color 0.2s ease !important;
    pointer-events: auto !important; /* Ensure links can receive clicks */
    cursor: pointer !important; /* Ensure cursor shows as clickable */
    position: relative !important; /* Ensure proper positioning */
    z-index: 1003 !important; /* Higher than menu container */
  }
  
  .greedy-nav .hidden-links a:hover {
    background-color: rgba(0, 0, 0, 0.05) !important;
    color: #007acc !important;
  }
}

/* Tablet specific navigation fixes */
@media (min-width: 768px) and (max-width: 1024px) {
  .greedy-nav .site-title {
    font-size: 1.25rem;
  }
  
  .greedy-nav__toggle {
    min-width: 48px;
    min-height: 48px;
  }
  
  .greedy-nav .hidden-links {
    min-width: 250px;
  }
}

/* Large screens - show full navigation */
@media (min-width: 1025px) {
  .greedy-nav__toggle.hidden {
    display: none !important;
  }
  
  .greedy-nav .visible-links {
    display: flex !important;
  }
}

/* Hero Section Responsive */
.homepage-hero {
  padding: 1.5rem 0.8rem;
  margin: -1rem -1rem 1.5rem -1rem;
}

.hero-content {
  max-width: 100%;
  padding: 0 0.5rem;
}

.homepage-hero .hero-title {
  font-size: 1.5rem;
  line-height: 1.3;
  margin-bottom: 0.6rem;
}

.homepage-hero .hero-subtitle {
  font-size: 0.875rem;
  line-height: 1.4;
  margin-bottom: 0.6rem;
}

.homepage-hero .hero-description {
  font-size: 0.875rem;
  line-height: 1.6;
  margin-bottom: 1rem;
}

/* Blog Section Responsive */
.blog-section {
  padding: 0.8rem 0;
  margin: 0.8rem 0;
}

.blog-intro {
  padding: 0 0.8rem;
  margin-bottom: 1rem;
}

.blog-intro p {
  font-size: 0.875rem;
  line-height: 1.6;
}

.blog-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
  padding: 0 0.5rem;
  margin: 0.8rem 0;
}

.blog-card {
  padding: 1rem;
  margin-bottom: 0;
}

.blog-card .blog-header h3 {
  font-size: 1.125rem;
  line-height: 1.4;
  margin-bottom: 0.5rem;
}

.blog-card .blog-header h3 a {
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.blog-meta {
  display: flex;
  flex-direction: column;
  gap: 0.3rem;
  margin-bottom: 0.6rem;
}

.blog-date,
.blog-category {
  font-size: 0.8125rem;
  display: block;
}

.blog-excerpt {
  font-size: 0.875rem;
  line-height: 1.6;
  margin-bottom: 0.6rem;
}

.blog-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.3rem;
  margin: 0.6rem 0;
}

.blog-tags .tag,
.tech-tag {
  font-size: 0.75rem;
  padding: 0.25rem 0.5rem;
  white-space: nowrap;
}

.read-more {
  display: inline-block;
  font-size: 0.875rem;
  margin-top: 0.4rem;
}

/* Header and Navigation */
.page__hero--overlay {
  padding: 1.5rem 0.8rem;
}

.page__hero .page__title {
  font-size: 1.5rem;
  line-height: 1.3;
}

.page__hero .page__lead {
  font-size: 0.875rem;
  line-height: 1.4;
}

/* Buttons */
.page__hero .btn {
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
  margin: 0.3rem 0.3rem 0.3rem 0;
  display: inline-block;
}

/* Author Profile - Mobile */
.sidebar {
  margin-bottom: 2rem;
}

.author__avatar {
  width: 80px;
  height: 80px;
}

.author__content {
  padding: 0.5rem;
}

.author__name {
  font-size: 1.125rem;
}

.author__bio {
  font-size: 0.875rem;
  line-height: 1.5;
}

/* Collection Grid Layout */
.entries-grid,
.entries-list {
  max-width: 100%;
}

.grid__item {
  margin-bottom: 1.5rem;
}

/* Archive and Collection Pages - Better Spacing */
.layout--archive .page__content,
.layout--posts .page__content,
.layout--collection .page__content {
  padding-left: 0;
  padding-right: 0;
}

.layout--archive .entries-list,
.layout--archive .entries-grid,
.layout--posts .entries-list,
.layout--posts .entries-grid,
.layout--collection .entries-list,
.layout--collection .entries-grid {
  padding-left: 0;
  padding-right: 0;
}

/* Content spacing */
.page__content {
  padding: 0.8rem;
  font-size: 1rem;
}

.page__content h2 {
  font-size: 1.5rem;
  margin: 1rem 0 0.6rem;
}

.page__content h3 {
  font-size: 1.25rem;
  margin: 0.8rem 0 0.5rem;
}

.page__content p {
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 0.7rem;
}

/* Images */
.page__content img {
  max-width: 100%;
  height: auto;
}

